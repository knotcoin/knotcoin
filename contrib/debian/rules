#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_knotcoin
#build/knotcoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_knotcoin)

DEB_INSTALL_EXAMPLES_knotcoind += debian/examples/*
DEB_INSTALL_MANPAGES_knotcoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix knotcoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f knotcoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake knotcoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_knotcoin
	src/test_knotcoin

# Ensure wrapper is set executable
binary-post-install/knotcoind:
	chmod +x $(cdbs_curdestdir)usr/bin/knotcoind
binary-post-install/knotcoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/knotcoin-qt
